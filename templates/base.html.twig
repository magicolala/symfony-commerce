<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}E-commerce{% endblock %}</title>
    <!-- MDB icon -->
    <link rel="icon" href="{{ asset('dist/img/mdb-favicon.ico') }}" type="image/x-icon">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="{{ asset('dist/css/bootstrap.min.css') }}">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="{{ asset('dist/css/mdb.min.css') }}">

    <link rel="stylesheet" type="text/css" href="{{asset('dist/css/star-rating-svg.css')}}">
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="{{ asset('dist/css/style.css') }}">
    {% block style %}{% endblock style %}
</head>
<body>

<nav class="navbar navbar-expand-lg fixed-top navbar-light bg-light">
    <div class="container" style="background: inherit;">
        <a class="navbar-brand" href="#">Admin</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if app.request.attributes.get('_route') == 'home' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('home') }}">Home</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'categorie' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('categorie') }}">Categories</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'marque' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('marque') }}">Marques</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get('_route') == 'blogs' %}active{% endif %}">
                    <a class="nav-link" href="{{ path('blogs') }}">Blog</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>

</nav>
<div class="container" style="padding-top: 80px;">
    {% block body %}{% endblock %}
</div>



<!-- jQuery -->
<script type="text/javascript" src="{{ asset('dist/js/jquery.min.js')}}"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="{{ asset('dist/js/popper.min.js') }}"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="{{ asset('dist/js/bootstrap.min.js') }}"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="{{ asset('dist/js/mdb.min.js') }}"></script>
<script src="{{asset('dist/js/jquery.star-rating-svg.js')}}"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
