{% extends 'app/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1>Blog ({{ blogs.totalItemCount }})</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                {% for blog in blogs %}
                    <div class="col-md-12 my-2">
                        <!--Card-->
                        <div class="card">

                            <!--Card image-->
                            <div class="view">
                                <img src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg" class="card-img-top"
                                     alt="photo">
                                <a href="#">
                                    <div class="mask rgba-white-slight"></div>
                                </a>
                            </div>

                            <!--Card content-->
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <!--Title-->
                                    <h4 class="card-title">{{ blog.titre }}</h4>
                                    <i class="text-muted">{{ blog.createdAt|date('d/m/Y à H:i') }}</i>
                                </div>
                                <!--Text-->
                                <p class="card-text">{{ blog.content }}</p>
                                <a href="#" class="btn btn-primary">Lire</a>
                            </div>

                        </div>
                        <!--/.Card-->
                    </div>
                {% endfor %}
            </div>
            <div class="row">
                <div class="col-md-12 d-flex justify-content-center">
                    <div class="navigation">
                        {{ knp_pagination_render(blogs) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <h3>Catégories</h3>
            <ul class="list-group">
            {% for categorie in categories %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('singleCategorie', {'id': categorie.id}) }}">{{ categorie.titre }}</a>
                    <span class="badge badge-primary badge-pill">{{ categorie.numberOfBlogsPublished }}</span>
                </li>
            {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
