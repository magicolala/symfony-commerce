{% extends 'app/base.html.twig' %}

{% block body %}
    <div class="row">
        {% for categorie in categories %}
            <div class="col-md-12 my-3">
                <h3>{{ categorie.titre }}</h3>
                <div class="row">
                    {% for produit in categorie.produits %}
                        <div class="col-md-4">
                            {% include 'app/_card-produit.html.twig' %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}

